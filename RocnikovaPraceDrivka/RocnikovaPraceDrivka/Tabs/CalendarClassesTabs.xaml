			xmlns:local="clr-namespace:RocnikovaPraceDrivka.Views"
			x:Class="RocnikovaPraceDrivka.Tabs.CalendarClassesTabs"
			NavigationPage.HasNavigationBar="True"
			NavigationPage.HasBackButton="True"
			NavigationPage.BackButtonTitle="Back">

	<TabbedPage.ToolbarItems>
		<ToolbarItem 
			x:Name="InfoToolbarItem"
			Clicked="InfoToolbarItem_Clicked"/>
		<ToolbarItem 
			x:Name="DayNightToolbarItem"
			Clicked="DayNightToolbarItem_Clicked"/>
	</TabbedPage.ToolbarItems>

</TabbedPage>